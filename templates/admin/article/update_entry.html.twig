{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="blog-header">
            <h2 class="blog-title">Edit your Entry</h2>
        </div>

        <div class="row">
            <div class="col-sm-12 blog-main">
{#                {{ form(form) }}#}
                {{ form_start(form) }}
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(form.slug) }}
                    </div>
                    <div class="form-group col-md-12">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="form-group col-md-12">
                        {{ form_row(form.body) }}
                    </div>
                    <div class="form-group col-md-12">
                        {{ form_row(form.imgUploaded)  }}
                    </div>
                    <div class="form-group col-md-12">
                        {{ form_row(form.author) }}
                    </div>
                </div>
                <div class="form-group col-md-4 pull-right">
                    {{ form_row(form.create) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
