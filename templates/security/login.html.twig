{% extends 'base.html.twig' %}
{% block title %}Sign in{% endblock %}
{#{% block navbar '' %}#}
{% block body %}
    <h2>Login</h2>
    {% if error %}
        <div>{{ error.messageKey }}</div>
    {% endif %}
    <div class="form" class="form-horizontal">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>
        </div>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" value="{{ (last_username) }}" name="_username" class="form-group"
                       placeholder="Username"/>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="_password" id="inputPassword" class="form-group" placeholder="Password" value="" required/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            <button class="btn btn-primary" type="submit">Sign in</button>
        </form>
    </div>
{% endblock %}
